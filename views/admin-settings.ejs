            $('#logFilter, #logDate').change(function() {
                loadActivityLogs();
            });
            
            // Button event listeners
            $('#backupDatabaseBtn, #backupNowBtn').click(function() {
                backupDatabase();
            });
            
            $('#testEmailBtn').click(function() {
                testEmail();
            });
            
            $('#restoreDatabaseBtn').click(function() {
                restoreDatabase();
            });
            
            $('#optimizeDatabaseBtn').click(function() {
                optimizeDatabase();
            });
            
            $('#cleanupLogsBtn').click(function() {
                cleanupLogs();
            });
            
            $('#resetDatabaseBtn').click(function() {
                resetDatabase();
            });
            
            $('#scheduleBackupBtn').click(function() {
                scheduleBackup();
            });
            
            $('#refreshLogsBtn').click(function() {
                refreshLogs();
            });
            
            $('#exportLogsBtn').click(function() {
                exportLogs();
            });
            
            // Add new admin form handler
            $('#addAdminForm').submit(function(e) {
                e.preventDefault();
                console.log('Form submitted!'); // Debug log
                
                // Validasi manual
                const username = $('#newUsername').val().trim();
                const fullName = $('#newFullName').val().trim();
                const email = $('#newEmail').val().trim();
                const password = $('#newPassword').val().trim();
                const role = $('#newRole').val();
                
                if (!username || !fullName || !email || !password) {
                    showAlert('warning', 'Semua field wajib diisi!');
                    return;
                }
                
                if (password.length < 6) {
                    showAlert('warning', 'Password minimal 6 karakter!');
                    return;
                }
                
                const adminData = {
                    username: username,
                    full_name: fullName,
                    email: email,
                    password: password,
                    role: role
                };
                
                console.log('Admin data:', adminData); // Debug log
                
                $.post('/admin/api/admins', adminData)
                .done(function(response) {
                    console.log('Success response:', response); // Debug log
                    showAlert('success', 'Admin berhasil ditambahkan!');
                    $('#addAdminForm')[0].reset();
                    loadAdminList();
                    loadSystemStats();
                })
                .fail(function(xhr, status, error) {
                    console.log('Error response:', xhr.responseText, status, error); // Debug log
                    let errorMessage = 'Gagal menambahkan admin!';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMessage = xhr.responseJSON.message;
                    }
                    showAlert('danger', errorMessage);
                });
            });
            
            // Delegated event listeners for dynamic content
            $(document).on('click', '[data-action="edit-admin"]', function() {
                const adminId = $(this).data('id');
                editAdmin(adminId);
            });
            
            $(document).on('click', '[data-action="delete-admin"]', function() {
                const adminId = $(this).data('id');
                deleteAdmin(adminId);
            });
        });

        // Load system statistics
        function loadSystemStats() {
            $.get('/admin/api/stats', function(data) {
                $('#totalAdmins').text(data.totalAdmins || 0);
                $('#dbSize').text((data.dbSize || 0) + ' MB');
                $('#lastBackup').text(data.lastBackup || '-');
                $('#systemStatus').text(data.systemStatus || 'Online');
            }).fail(function() {
                console.log('Failed to load system stats');
            });
        }

        // Load admin list
        function loadAdminList() {
            $.get('/admin/api/admins', function(data) {
                let html = '';
                data.forEach(admin => {
                    html += `
                        <div class="d-flex justify-content-between align-items-center p-3 mb-2 bg-light rounded">
                            <div>
                                <strong>${admin.full_name}</strong><br>
                                <small class="text-muted">${admin.username} - ${admin.role}</small>
                            </div>
                            <div>
                                <button class="btn btn-sm btn-outline-primary me-1" data-action="edit-admin" data-id="${admin.id}">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" data-action="delete-admin" data-id="${admin.id}">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    `;
                });
                $('#adminList').html(html);
            }).fail(function() {
                $('#adminList').html('<p class="text-muted">Gagal memuat daftar admin</p>');
            });
        }

        // Load activity logs
        function loadActivityLogs() {
            const filter = $('#logFilter').val() || 'all';
            const date = $('#logDate').val();
            
            $.get('/admin/api/logs', { filter, date }, function(data) {
                let html = '';
                data.forEach(log => {
                    html += `
                        <div class="activity-item">
                            <div class="activity-time">${new Date(log.created_at).toLocaleString('id-ID')}</div>
                            <div class="activity-action">${log.action}</div>
                            <div class="text-muted">${log.description}</div>
                        </div>
                    `;
                });
                $('#activityLog').html(html || '<p class="text-muted text-center py-4">Tidak ada aktivitas</p>');
            }).fail(function() {
                $('#activityLog').html('<p class="text-muted text-center py-4">Gagal memuat log aktivitas</p>');
            });
        }

        // Load database info
        function loadDatabaseInfo() {
            $.get('/admin/api/database-info', function(data) {
                $('#dbSizeInfo').text((data.size || 0) + ' MB');
                $('#tableCount').text(data.tables || 0);
                $('#recordCount').text(data.records || 0);
                $('#lastBackupInfo').text(data.lastBackup || 'Belum pernah');
            }).fail(function() {
                $('#dbSizeInfo').text('Error');
                $('#tableCount').text('Error');
                $('#recordCount').text('Error');
                $('#lastBackupInfo').text('Error');
            });
        }



        // System configuration form
        $('#systemConfigForm').submit(function(e) {
            e.preventDefault();
            
            const configData = {
                school_name: $('#schoolName').val(),
                school_address: $('#schoolAddress').val(),
                school_phone: $('#schoolPhone').val(),
                school_email: $('#schoolEmail').val(),
                active_year: $('#activeYear').val(),
                registration_deadline: $('#registrationDeadline').val(),
                max_capacity: $('#maxCapacity').val(),
                registration_status: $('#registrationStatus').is(':checked')
            };
            
            $.post('/admin/api/system-config', configData, function(response) {
                showAlert('success', 'Konfigurasi sistem berhasil disimpan!');
            }).fail(function() {
                showAlert('danger', 'Gagal menyimpan konfigurasi sistem!');
            });
        });

        // Email configuration form
        $('#emailConfigForm').submit(function(e) {
            e.preventDefault();
            
            const emailData = {
                smtp_host: $('#smtpHost').val(),
                smtp_port: $('#smtpPort').val(),
                sender_email: $('#senderEmail').val(),
                smtp_username: $('#smtpUsername').val(),
                smtp_password: $('#smtpPassword').val(),
                smtp_encryption: $('#smtpEncryption').val()
            };
            
            $.post('/admin/api/email-config', emailData, function(response) {
                showAlert('success', 'Pengaturan email berhasil disimpan!');
            }).fail(function() {
                showAlert('danger', 'Gagal menyimpan pengaturan email!');
            });
        });

        // Utility functions
        function showAlert(type, message) {
            console.log('showAlert called:', type, message); // Debug log
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'warning' ? 'exclamation-triangle' : 'times-circle'} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            $('#alertContainer').html(alertHtml);
            
            // Scroll to alert to make it visible
            $('html, body').animate({
                scrollTop: $('#alertContainer').offset().top - 100
            }, 500);
            
            setTimeout(() => {
                $('.alert').fadeOut();
            }, 8000); // Increased timeout to 8 seconds
        }

        function backupDatabase() {
            if (confirm('Apakah Anda yakin ingin membuat backup database?')) {
                $.post('/admin/api/backup-database', function(response) {
                    showAlert('success', 'Backup database berhasil dibuat!');
                    loadSystemStats();
                    loadDatabaseInfo();
                }).fail(function() {
                    showAlert('danger', 'Gagal membuat backup database!');
                });
            }
        }

        function restoreDatabase() {
            const file = $('#restoreFile')[0].files[0];
            if (!file) {
                showAlert('warning', 'Pilih file backup terlebih dahulu!');
                return;
            }
            
            if (confirm('PERINGATAN: Restore database akan mengganti semua data yang ada. Lanjutkan?')) {
                const formData = new FormData();
                formData.append('backup_file', file);
                
                $.ajax({
                    url: '/admin/api/restore-database',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        showAlert('success', 'Database berhasil di-restore!');
                        loadSystemStats();
                        loadDatabaseInfo();
                    },
                    error: function() {
                        showAlert('danger', 'Gagal restore database!');
                    }
                });
            }
        }

        // Utility functions
        function testEmail() {
            showAlert('info', 'Mengirim test email...');
            $.post('/admin/api/test-email', function(response) {
                showAlert('success', 'Test email berhasil dikirim!');
            }).fail(function() {
                showAlert('danger', 'Gagal mengirim test email!');
            });
        }
        
        function optimizeDatabase() {
            if (confirm('Apakah Anda yakin ingin mengoptimasi database?')) {
                showAlert('info', 'Mengoptimasi database...');
                $.post('/admin/api/optimize-database', function(response) {
                    showAlert('success', 'Database berhasil dioptimasi!');
                }).fail(function() {
                    showAlert('danger', 'Gagal mengoptimasi database!');
                });
            }
        }
        
        function cleanupLogs() {
            if (confirm('Apakah Anda yakin ingin membersihkan log lama?')) {
                showAlert('info', 'Membersihkan log...');
                $.post('/admin/api/cleanup-logs', function(response) {
                    showAlert('success', 'Log berhasil dibersihkan!');
                    loadActivityLogs();
                }).fail(function() {
                    showAlert('danger', 'Gagal membersihkan log!');
                });
            }
        }
        
        function resetDatabase() {
            const confirmation = prompt('PERINGATAN: Ini akan menghapus SEMUA data! Ketik "RESET" untuk konfirmasi:');
            if (confirmation === 'RESET') {
                showAlert('info', 'Mereset database...');
                $.post('/admin/api/reset-database', function(response) {
                    showAlert('success', 'Database berhasil direset!');
                    loadSystemStats();
                    loadAdminList();
                }).fail(function() {
                    showAlert('danger', 'Gagal mereset database!');
                });
            }
        }
        
        function scheduleBackup() {
            showAlert('info', 'Fitur jadwal backup akan segera tersedia!');
        }
        
        function refreshLogs() {
            loadActivityLogs();
            showAlert('success', 'Log berhasil direfresh!');
        }
        
        function exportLogs() {
            window.open('/admin/api/export-logs', '_blank');
        }
        
        function editAdmin(adminId) {
            showAlert('info', 'Fitur edit admin akan segera tersedia!');
        }

        function deleteAdmin(id) {
            if (confirm('Apakah Anda yakin ingin menghapus admin ini?')) {
                $.ajax({
                    url: `/admin/api/admins/${id}`,
                    type: 'DELETE',
                    success: function(response) {
                        showAlert('success', 'Admin berhasil dihapus!');
                        loadAdminList();
                        loadSystemStats();
                    },
                    error: function() {
                        showAlert('danger', 'Gagal menghapus admin!');
                    }
                });
            }
        }
        
    }); // End of document ready function
    </script>
</body>
</html>