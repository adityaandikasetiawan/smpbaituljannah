        let currentSlideGaleri = 0;
        const totalSlidesGaleri = 3;
        
        function updateCarouselGaleri() {
          const track = document.getElementById('galeriTrack');
          const pageNumbers = document.querySelectorAll('.page-number');
          
          track.style.transform = `translateX(-${currentSlideGaleri * 100}%)`;
          
          pageNumbers.forEach((btn, index) => {
            btn.classList.toggle('active', index === currentSlideGaleri);
          });
        }
        
        function nextSlide() {
          currentSlideGaleri = (currentSlideGaleri + 1) % totalSlidesGaleri;
          updateCarouselGaleri();
        }
        
        function previousSlide() {
          currentSlideGaleri = (currentSlideGaleri - 1 + totalSlidesGaleri) % totalSlidesGaleri;
          updateCarouselGaleri();
        }
        
        // Page number click handlers
        document.querySelectorAll('.page-number').forEach((btn, index) => {
          btn.addEventListener('click', () => {
            currentSlideGaleri = index;
            updateCarouselGaleri();
          });
        });
        
        // Navigation button event listeners
        document.getElementById('prevBtn').addEventListener('click', previousSlide);
        document.getElementById('nextBtn').addEventListener('click', nextSlide);
        
        // Auto-play functionality
