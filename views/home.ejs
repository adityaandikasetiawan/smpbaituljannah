    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const trackGaleri = document.getElementById('galeriTrack');
        const dotsGaleri = document.querySelectorAll('.carousel-dot-galeri');
        let currentSlideGaleri = 0;
        
        function showSlideGaleri(index) {
          trackGaleri.style.transform = `translateX(-${index * 100}%)`;
          
          dotsGaleri.forEach((dot, i) => {
            dot.classList.toggle('active', i === index);
          });
          
          currentSlideGaleri = index;
        }
        
        dotsGaleri.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            showSlideGaleri(index);
          });
        });
        
        // Auto-play carousel
        setInterval(() => {
          currentSlideGaleri = (currentSlideGaleri + 1) % dotsGaleri.length;
          showSlideGaleri(currentSlideGaleri);
        }, 4000);
      });
